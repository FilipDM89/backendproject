<% include partials/header.ejs %>
<div class="container">
    <h5>Edit <em><%= historyarticle.title %></em></h5>
    <form action="/history/<%= historyarticle._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label><strong>Title: </strong></label><input class="form-control" type="text" name="historyarticle[title]" value="<%= historyarticle.title %>">
      </div>
      <div class="form-group">
        <label><strong>Image: </strong></label><input class="form-control" type="text" name="historyarticle[image]" value="<%= historyarticle.image %>">
      </div>
      <div class="form-group">
        <label><strong>Content: </strong></label><textarea class="form-control" rows="10" name="historyarticle[content]"><%= historyarticle.content %></textarea>
      </div>
        <input type="submit" class="btn btn-dark">
        <a href="/history/<%= historyarticle._id %>" class="btn btn-dark">Back</a>
    </div>
    </form>

<% include partials/footer.ejs %>